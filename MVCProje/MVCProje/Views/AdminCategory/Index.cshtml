@using EntityLayer.Concrete
@model List<Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />

<table class="table table-bordered">
<tr>
    <th>#</th>
    <th>Kategori Adı</th>
    <th>Sil</th>
    <th>Güncelle</th>
    <th>Başlıklar</th>
</tr>

@foreach (var x in Model)
{

    <tr>
        <th>@x.CategoryID</th>
        <td>@x.CategoryName</td>
        <td><a href="/AdminCategory/DeleteCategory/@x.CategoryID" class="btn btn-danger">Sil</a></td>
        <td><a href="/AdminCategory/EditCategory/@x.CategoryID" class="btn btn-warning">Güncelle</a></td>
        <td><a href="#" class="btn btn-primary">Başlıklar</a></td>
    </tr>
}
</table>

<br />
<a href="/AdminCategory/AddCategory" class="btn btn-info">Yeni Kategori</a>